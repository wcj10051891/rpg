<project name="xlib" basedir="." xmlns:artifact="antlib:org.apache.maven.artifact.ant">
	<property name="src" value="src" />
	<property name="target" value="target" />
	<property name="classes" value="${target}/classes" />
	<property name="jdk.version" value="1.7" />
	<property name="source.encoding" value="UTF-8" />

	<artifact:pom id="pom.this" file="pom.xml" />
	<artifact:dependencies filesetid="fileset.lib.runtime" pathid="path.lib.runtime" pomrefid="pom.this" usescope="runtime" />

	
	<path id="classpath.project">
		<path refid="path.lib.runtime"/>
		<fileset dir="lib/"/>
	</path>
	
	<target name="clean">
		<delete dir="target" />
	</target>

	<target name="compile" depends="clean">
		<mkdir dir="${classes}" />
		<javac srcdir="${src}" destdir="${classes}" source="${jdk.version}" target="${jdk.version}" encoding="${source.encoding}" nowarn="on" debug="true">
			<classpath>
				<path refid="classpath.project" />
			</classpath>
		</javac>
	</target>

	<target name="dist" depends="compile">
		<jar destfile="${target}/${ant.project.name}.jar">
			<fileset dir="${classes}" />
		</jar>
		<delete dir="${target}" includeemptydirs="true" excludes="${ant.project.name}.jar"/>
	</target>
	
	<target name="dist-src">
		<jar destfile="${project.name}-src.jar">
			<fileset dir="src">
				<exclude name=".svn" />
			</fileset>
		</jar>
	</target>

	<target name="copy-maven-lib-jar">
<!--	
		<delete dir="lib"/>
		<mkdir dir="lib" /> 
-->
		<copy todir="lib" flatten="true">
			<fileset refid="fileset.lib.runtime" />
			<mapper type="flatten" />
		</copy>
	</target>
